pipeline {
    agent any
    stages {
        stage('Greet') {
            steps {
                echo 'Hello, Jenkins!'
            }
        }
        stage('Run Python Script') {
            steps {
                bat 'python scripts\\hello_world.py'
            }
        }
        stage('Clone Mach2 repo') {
            steps {
                dir('mach2') { // optional: clone into subdir to avoid clutter
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: 'dev']],
                        userRemoteConfigs: [[
                            url: 'git@github.com:jrendon102/mach2.git',
                            credentialsId: 'autobuild-ssh-keys'
                        ]]
                    ])
                }
            }
        }
    }
}
